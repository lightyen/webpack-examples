{
  "editor.formatOnSave": true,
  "formatFiles.excludePattern": "node_modules,build,.gitignore,.editorconfig,.browserslistrc,yarn.lock",
  "search.exclude": {
    "**/build": true,
    "**/node_modules": true
  },
  "files.exclude": {
    "**/.cache": true,
    "yarn.lock": true
  },
  "files.watcherExclude": {
    "**/.cache": true,
    "**/build": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
